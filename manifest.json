{
  "manifest_version": 3,
  "name": "My First Extension",
  "version": "1.0",
  "description": "これは簡単なChrome拡張機能です。",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["activeTab"]
}
