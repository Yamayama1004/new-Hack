{
  "manifest_version": 3,
  "name": "My First Extension",
  "version": "1.0",
  "description": "これは簡単なChrome拡張機能です。",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}